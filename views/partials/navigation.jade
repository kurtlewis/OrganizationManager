.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') #{organization}
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=title=='Home'?'active':undefined)
          a(href='/') Home
        li(class=title=='Members'?'active':undefined)
          a(href='/member') Members
        li(class=title=='Meetings'?'active':undefined)
          a(href='/meeting') Meetings
        if eventsEnabled
          li(class=title=='Events'?'active':undefined)
            a(href='/event') Events
        li(class=title=='Virtual'?'active':undefined)
          a(href='/virtual') Virtual Tour
        li(class=title=='Apply'?'active':undefined)
          a(href='/apply') Apply
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login

        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img.profile-image(src='#{user.profile.picture}')
              else
                img.profile-image(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li: a(href='/account') My Account
              li.divider
              li: a(href='/logout') Logout
          if user
            li(class=title=='Settings'?'active':undefined)
              a(href='/settings') Settings
